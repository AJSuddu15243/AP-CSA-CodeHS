public class VowelFrequency
{
    public static void main(String[] args)
    {
        String sentence = "The most dangerous phrase in"
                + " the language is, 'We've always done"
                + " it this way.' - Grace Hopper";
        // Call countVowels
        countVowels(sentence);
    }
    
    // Prints the number of each vowel in `sentence`
    public static void countVowels(String sentence)
    {
        String vowels = "aeiou";
        
        // Outer loop: iterate over each vowel
        for (int i = 0; i < vowels.length(); i++)
        {
            char vowel = vowels.charAt(i);
            int count = 0;
            
            // Inner loop: iterate over each character in sentence
            for (int j = 0; j < sentence.length(); j++)
            {
                // Compare characters in lowercase for case-insensitive matching
                if (Character.toLowerCase(sentence.charAt(j)) == vowel)
                {
                    count++;
                }
            }
            
            // Print the vowel and its count
            System.out.println(vowel + " : " + count);
        }
    }
}
