import java.util.Scanner;

public class SmoothieRunner 
{
    public static void main(String[] args) 
    {
        Scanner input = new Scanner(System.in);
        
        System.out.println("What type of boost would you like?");
        System.out.println("1. Protein");
        System.out.println("2. Spinach");
        System.out.println("3. Ginger");
        int boostInt = input.nextInt();
        
        String boost;
        
        // Assign boost based on user input
        if (boostInt == 1) {
            boost = "protein";
        } else if (boostInt == 2) {
            boost = "spinach";
        } else if (boostInt == 3) {
            boost = "ginger";
        } else {
            boost = "ginger";
            System.out.println("Invalid number. You will receive ginger by default.");
        }
        
        // Create Smoothie object
        Smoothie smoothie = new Smoothie(boost);
        
        // Print order details
        System.out.println("You ordered a " + smoothie.toString());
        System.out.println(smoothie.getNutrients());
    }
}
